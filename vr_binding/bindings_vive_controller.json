{
   "action_manifest_version" : 1,
   "alias_info" : {},
   "app_key" : "system.generated.dxlib_vr.exe",
   "bindings" : {
      "/actions/main" : {
         "poses" : [
          {
            "output": "/actions/main/in/Controller_Left",
            "path" : "/user/hand/left/input/pose/raw"
          },
          {
            "output": "/actions/main/in/Controller_Right",
            "path": "/user/hand/right/input/pose/raw"
          }
         ],
         "sources" : [
            {
               "inputs" : {
                  "scroll" : {
                     "output" : "/actions/main/in/select"
                  }
               },
               "mode" : "scroll",
               "path" : "/user/hand/right/input/trackpad"
            },
            {
               "inputs" : {
                  "scroll" : {
                     "output" : "/actions/main/in/move"
                  }
               },
               "mode" : "scroll",
               "path" : "/user/hand/left/input/trackpad"
            },
            {
               "inputs" : {
                  "click" : {
                     "output" : "/actions/main/in/cancel"
                  }
               },
               "mode" : "toggle_button",
               "path" : "/user/hand/left/input/application_menu"
            },
            {
               "inputs" : {
                  "click" : {
                     "output" : "/actions/main/in/decision"
                  }
               },
               "mode" : "toggle_button",
               "path" : "/user/hand/right/input/application_menu"
            }
         ]
      }
   },
   "category" : "steamvr_input",
   "controller_type" : "vive_controller",
   "description" : "Vive Controller用デフォルト設定",
   "name" : "Vive Controller用のテスト設定"
}
